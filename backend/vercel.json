{
    "version": 2,
    "builds": [
      {
        "src": "api/index.ts",
        "use": "@vercel/node",
        "config": {
          "maxLambdaSize": "50mb",
          "includeFiles": [
            "prisma/schema.prisma",
            "dist/**"
          ]
        }
      }
    ],
  
    "functions": {
      "api/index.ts": {
        "memory": 3008,
        "maxDuration": 30,
        "timeout": 30
      }
    }
  }